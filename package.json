{
	"name": "create-react-folder-component",
	"displayName": "Create React Folder Component",
	"description": "A simple wizard that speeds up creating new React folder components",
	"publisher": "hektorw",
	"repository": {
		"type": "git",
		"url": "https://github.com/HektorW/vs-code-create-react-folder-component"
	},
	"version": "1.0.0",
	"icon": "images/icon.png",
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.createTypeScriptComponent",
		"onCommand:extension.createTypeScriptComponentWithStyle"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.createTypeScriptComponent",
				"title": "Create Typescript Component"
			},
			{
				"command": "extension.createTypeScriptComponentWithStyle",
				"title": "Create Typescript Component (with style)"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "extension.createTypeScriptComponent",
					"group": "7_modification"
				},
				{
					"command": "extension.createTypeScriptComponentWithStyle",
					"group": "7_modification"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.39.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	}
}
